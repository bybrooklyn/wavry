{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wavry",
  "version": "0.0.5-unstable2",
  "identifier": "dev.wavry.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "crateswavry-desktop",
        "width": 800,
        "height": 600,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 16,
          "y": 16
        },
        "backgroundColor": "#1E2024D0"
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' https://auth.wavry.dev ws://127.0.0.1:* ws://localhost:* http://127.0.0.1:* http://localhost:*;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "app",
      "dmg",
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
